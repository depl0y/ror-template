<% provide(:title, "Log in") %>

<div class="col-lg-12">
	<div class="col-lg-6 col-md-6 col-xs-12">
		<h3>Log in using facebook</h3>
		<hr>
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
	</div>

	<div class="col-lg-6 col-md-6 col-xs-12">
		<h3>Log in using an account</h3>
		<hr>
		<%= form_for(:session, url: sessions_path, html: {class: "form-horizontal"}) do |f| %>
			<div class="form-group">
				<label>Email</label>
				<%= f.text_field :email, {class: "form-control", placeholder: "Email address"} %>
			</div>
			<div class="form-group">
				<label>Password</label>
				<%= f.password_field :password, {class: "form-control", placeholder: "Password"} %>
			</div>

			<%= f.submit "Log in", class: "btn btn-primary" %>
			<%= link_to "Forgot your password?", new_password_reset_path %>
		<% end %>

		<% if flash[:error] %>
			<div class="alert alert-warning" style="margin-top: 20px"><%= flash[:error] %></div>
		<% end %>
	</div>
</div>
