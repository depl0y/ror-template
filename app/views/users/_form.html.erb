<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

	<div class="form-group">
		<label>Name</label>
		<%= f.text_field :name, {class: "form-control", placeholder: "Your name", value: @provided_name} %>
	</div>

	<div class="form-group">
		<label>Email</label>
		<%= f.text_field :email, {class: "form-control", placeholder: "Email address", value: @provided_email} %>
	</div>

	<% if !session["devise.facebook_data"] || !session["devise.facebook_data"].uid %>
		<div class="form-group">
			<label>Password</label>
			<%= f.password_field :password, {class: "form-control", placeholder: "Your password", value: @account_number} %>
		</div>

		<div class="form-group">
			<label>Confirm password</label>
			<%= f.password_field :password_confirmation, {class: "form-control", placeholder: "Confirm your password", value: @account_number} %>
		</div>
	<% end %>

	<div class="checkbox">
		<label>
			<input type="checkbox"> I agree with the <a href="#">terms</a>.
		</label>
	</div>

	<%= f.submit "Sign up", class: "btn btn-primary" %>

	<% if flash[:error] %>
		<div class="alert alert-warning" style="margin-top: 20px"><%= flash[:error] %></div>
	<% end %>

<% end %>